    <div class="tab-pane fade show active" id="nav-tr" role="tabpanel" aria-labelledby="nav-tr-tab">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Başlık</th>
                        <th scope="col">Tarih</th>
                        <th scope="col">Fotoğraf</th>
                        <th scope="col">Dosya</th>
                        <th scope="col">Popup mı?</th>
                        <th scope="col">Düzenle</th>
                        <th scope="col">Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Announcements)
                    {
                <tr>
                    <th>
                        <a asp-area="admin" asp-controller="Announcement" asp-action="Edit" asp-route-id="@item.Id">
                            @item.Title
                        </a>
                    </th>
                    <td>@item.StartDate</td>

                
                    <th>
                        @{ if (ViewBag.images.Count > 0 && ViewBag.images != null)
                            {
                                foreach (var image in ViewBag.images)
                                {
                                    if (image.AnnounceImage.Id == item.Id)
                                    {
                <img style="width:60px;border-radius:50%" src="@image.ImageUrl" /> }
        }
    } }
                    </th>
                
                
                    <th>
                        @{ if (ViewBag.files.Count > 0 && ViewBag.files != null)
                            {
                                foreach (var file in ViewBag.files)
                                {
                                    if (file.AnnounceFile.Id == item.Id)
                                    {
                @file.FileTitle }
        }
    } }
                    </th>
                    <td>
                        @if (@item.Popup == true)
                        {
                    <span>Evet</span> }
                else
                {
                    <span>Hayır</span>}
                    </td>
                <td><a class="btn btn-primary" asp-area="Admin" asp-controller="Announcement" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a></td>
                <td><a class="btn btn-danger" asp-area="Admin" asp-controller="Announcement" asp-action="Delete" asp-route-id="@item.Id">Sil</a></td>
                </tr>}

                </tbody>
            </table>
